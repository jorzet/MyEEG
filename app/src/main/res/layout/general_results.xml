<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco">

    <ProgressBar
        android:id="@+id/loading_general_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/error_not_general_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_red_light"
        android:gravity="center"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/loading_general_results"
        android:layout_toEndOf="@+id/loading_general_results"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:id="@+id/general_results_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/brain_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/frontal_brain_zone"/>


            <TableLayout
                android:id="@+id/general_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/brain_image"
                android:layout_marginTop="50dp"
                android:layout_margin="20dp"
                android:gravity="center"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#000000">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_column="0"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:layout_margin="1dp"
                        android:text="Folio de la cita"
                        android:textSize="16sp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/id_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_margin="1dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text=""
                        android:textSize="14sp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#000000">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_column="0"
                        android:layout_margin="1dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text="Zona cerebral"
                        android:textSize="16sp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/brain_zone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_margin="1dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text=""
                        android:textSize="14sp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#000000">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_column="0"
                        android:background="#FFFFFF"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:text="Tipo de onda \n dominante"
                        android:textSize="16sp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/dominant_wave_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_margin="1dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text=""
                        android:textSize="14sp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </TableRow>


                <TableRow
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#000000">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_column="0"
                        android:background="#FFFFFF"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:text="Porcentage del\ntipo de onda dominante"
                        android:textSize="16sp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/percentage_wave_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_margin="1dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text=""
                        android:textSize="14sp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#000000">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_column="0"
                        android:background="#FFFFFF"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:text="Electrodos utilizados"
                        android:textSize="16sp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/electrodes_used"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_margin="1dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text=""
                        android:textSize="14sp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#000000">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_column="0"
                        android:background="#FFFFFF"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:text="DuraciÃ³n del estudio"
                        android:textSize="16sp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/study_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_margin="1dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text=""
                        android:textSize="14sp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </TableRow>

            </TableLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/show_choose_parameters_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/general_date"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="30dp"
                android:padding="12dp"
                android:backgroundTint="@color/colorGreenButton"
                android:text="Consultar resultados especificos"
                android:textColor="@color/blanco" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>